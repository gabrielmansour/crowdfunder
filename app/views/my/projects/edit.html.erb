<h1>Edit Project</h1>

<div class="well">
  <%= button_to "Delete Project", [:my, @project], class: "btn btn-danger", method: :delete, confirm: "Are you sure?", form_class: "pull-right"%>
  <%= link_to "&larr; My Projects".html_safe, my_projects_path, class: "btn btn-small" %>
</div>

<%= form_for [:my, @project] do |f| %>
  <div class="well pull-right"><%= link_to "Manage Images", my_project_images_path(@project), class: 'btn btn-small' %></div>
  <fieldset class="span6">
    <%= render f %>

    <%= f.submit "Update Project", class: "btn" %>
  </fieldset>
<% end %>
