<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="#">CrowdFunder</a>
      <div class="nav-collapse collapse">
        <ul class="nav">
          <li class="<%= 'active' if current_page? root_path %>">
            <%= link_to 'Home', :root %>
          </li>
          <li class="<%= 'active' if controller_path == "projects" %>">
            <%= link_to 'Projects', :projects %>
          </li>
          <li class="divider-vertical"></li>
          <li class="<%= 'active' if controller_path.starts_with?("my/") %>">
            <%= link_to 'My Projects', my_projects_path %>
          </li>
        </ul>
      </div><!--/.nav-collapse -->

      <div class="nav-collapse collapse pull-right">
        <ul class="nav">
          <% if logged_in? %>
            <li class="navbar-text">Logged in as <%= current_user.name %></li>
            <li><%= link_to "Log out", logout_path %></li>
          <% else %>
            <li><%= link_to "Sign up", new_user_path %></li>
            <li><%= link_to "Log in", login_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
