<!DOCTYPE html>
<html>
<head>
  <title>Crowdfunder</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= render 'layouts/nav' %>

<div class="container">
  <% if notice.present? %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>
  <% if alert.present? %>
    <div class="alert alert-error"><%= alert %></div>
  <% end %>


  <%= yield %>
</div>

</body>
</html>
